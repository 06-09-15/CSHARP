    sum = num + sum;
    num = num + 2;
  }
  while(num <= 50);
  Console.WriteLine("Sum = "+ sum);
  Console.ReadLine();
  }
}

//5.Print sum of 25-75
//For loop
using System;

class Program {
  public static void Main () {
  
  int num, sum = 0;
  for (num = 24; num <= 74;)
  {
  num = num + 1;
  sum = sum + num;
  }
  Console.WriteLine("Sum = {0}", sum);
  Console.ReadLine();
  }
}

