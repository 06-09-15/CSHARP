//6.Input 100 random numbers and count the odd and even numbers using for statement
using System;

class Program {
   public static void Main(string[] args) {
      Console.WriteLine ("Odd numbers from 1 to 100");
      for (int i =1; i <= 100; i++)
      {
          if (i % 2 !=0)
          {
          Console.WriteLine(i);
          }
      }

      Console.WriteLine ("Even numbers from 1 to 100");
      for (int i =1; i <= 100; i++)
      {
          if (i % 2 ==0)
          {
          Console.WriteLine(i);
          }
      }
      
      Console.ReadKey();
        }
    }

//7.Input 100 random integer numbers (positive and negative) and sum the positive and negative numbers using while statement.
using System;

class Program {
   public static void Main(string[] args) {
     //int i;
 int n = 3;
 for (int i = 1; i <= n; i++)  // outer loop
 {
 for (int j = 1; j <= 50; j++)  // inner loop
 {

 Console.Write( (i * j)+"\t");
 }
 Console.WriteLine();
 }

    }
 }

//8.Output this series using do while statement:1 2 4 8 16 ...... 1024
using System;

class Program {
   public static void Main(string[] args) {
     int num = 1;
     int i=0;
     
     do
     {
     num = num * 2;
     i+=2;
     Console.WriteLine(num);
     }
     while (i<=19);
     Console.WriteLine();
     
  }     
}

//9.Number pattern
using System;

class Program {
   public static void Main(string[] args) {
   //int i;
 int n = 5;
 for (int i = 1; i <= n; i++)  // outer loop
 {
 for (int j = 1; j <= i; j++)  // inner loop
 {

 Console.Write (j + "");
 }
 Console.WriteLine();
 }
   }
 }

//10.Series sum 3 5 7 ...... 99
using System;

class Program {
  public static void Main () {
  
  int num, sum = 0;
  num = 1;
  while (num <= 97)
  {
  num = num + 2;
  sum = sum + num;
  }
  Console.WriteLine("Sum = {0}", sum);
  
  Console.ReadLine();
    
  }
}

//11.* pattern
using System;

 class Program {
   public static void Main(string[] args) {
   //int i;
 int n = 5;
 for (int i = 1; i <= n; i++)  // outer loop
 {
 for (int j = 1; j <= 6-i; j++)  // inner loop
 {

 Console.Write ("*");
 }
 Console.WriteLine();
 }
   }
 }

//12.Series calculate
using System;

class Program {
  public static void Main (string[] args) {
    Console.Write("Enter the value of x:");
    int x = Convert.ToInt32(Console.ReadLine());

    Console.Write("Enter the value of n:");
    int n = Convert.ToInt32(Console.ReadLine());

    int i = 1;
    double sum = 0;
    while (i<=n) 
    {
    sum += (1/Math.Pow(x,i+1));
    i++;
    }
    Console.WriteLine("sum:" + sum);

 }
}
