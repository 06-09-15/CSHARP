//1.Add all the elements of an array
using System;

class Program {
  public static void Main (string[] args) {
    int[] num = new int[8];
    int sum = 0;
    Console.WriteLine("Enter the array elements");
    for (int i=0; i<4; i++)
    {
    num[i] = Convert.ToInt32(Console.ReadLine());
    sum += num[i];  // sum = sum + num[i];
    }
    Console.WriteLine("Array elements are");
    for (int i=0; i<4; i++)
    {

    Console.WriteLine(num[i]);
      
    }
    Console.WriteLine("Sum is {0}",sum);
    
  }
}

//2.Rock, paper, scissors game
using System;

 class Program {
    public static void Main(string[] args) {
      String user1,user2;

      Console.WriteLine ("Choose from ROCK, PAPER and SCISSORS for user 1");
      user1=Console.ReadLine();
      Console.WriteLine ("Choose from ROCK, PAPER and SCISSORS for user 2");
      user2=Console.ReadLine();

      if(user1=="rock")
      {
      if(user2=="paper")
      {
      Console.WriteLine("user 2 wins");
      }
      if(user2=="rock")
      {
      Console.WriteLine("tie");
      }
      }
      else if(user1=="paper")
      {
      if(user2=="scissors")
      {
      Console.WriteLine("user 2 wins");
      }
      if(user2=="paper")
      {
      Console.WriteLine("tie");
      }
      }
      else if(user1=="scissors")
      {
      if(user2=="rock")
      {
      Console.WriteLine("user 2 wins");
      }
      if(user2=="scissors")
      {
      Console.WriteLine("tie");
      }
      }

      {

      }
    }
 }

//3.Print the sum of first 50 integers
//For loop
using System;
class Program {
  public static void Main () {
  
  int num, sum = 0;
  for (num = 0; num <= 49;)
  {
  num = num + 1;
  sum = sum + num;
  }
  Console.WriteLine("Sum = {0}", sum);
  Console.ReadLine();
  }
}
//While loop
using System;
class Program {
  public static void Main () {
  
  int num = 0;
  int sum = 0;
  while(num <= 50)
  {
    sum = num + sum;
    num = num + 1;
  }
  Console.WriteLine("Sum = "+ sum);
  Console.ReadLine();
  }
}

//Do while loop
using System;

class Program {
  public static void Main () {

  int num = 0;
  int sum = 0;
  do
  {
    sum = num + sum;
    num = num + 1;
  }
  while(num <= 50);
  Console.WriteLine("Sum = "+ sum);
  Console.ReadLine();
  }
}

//4.Print sum of 1-50 odd numbers
//For loop
using System;
class Program {
  public static void Main () {
  
  int num, sum = 0;
  for (num = -1; num <= 47;)
  {
  num = num + 2;
  sum = sum + num;
  }
  Console.WriteLine("Sum = {0}", sum);
  Console.ReadLine();
  }
}
//While loop
using System;
class Program {
  public static void Main () {
  
  int num = -1;
  int sum = 1;
  while(num <= 50)
  {
    sum = num + sum;
    num = num + 2;
  }
  Console.WriteLine("Sum = "+ sum);
  Console.ReadLine();
  }
}

//Do while loop
